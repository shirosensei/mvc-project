     <!-- Form field -->
    <div class="d-flex vh-100 justify-content-center hero-section">
        <div class="container row g-0 mx-auto">
            <form action="/signup" method="POST" class="row container py-4 form-group col-md-8 mx-5">
                <div class="mb-3 col-xs-4">
                    <label for="name" class="form-label">Full Name: </label>
                    <input  class="form-control " type="text" name="userName" placeholder="Full Name">
                </div>
        
                <div class="mb-3 col-xs-4">
                    <label for="DOB" class="form-label">Age: </label>
                    <input  class="form-control" type="number" name="age" placeholder="Enter Age" value="">
                </div>
        
                <div class="mb-3 col-xs-4">
                    <label for="email" class="form-label">Email: </label>
                    <input  class="form-control" type="email" name="email" placeholder="Email">
                </div>
                <div class="mb-3 col-xs-4">
                    <label for="startingWeight" class="form-label">Weight:</label> 
                    <input  class="form-control" type="number" name="startingWeight" placeholder="Starting Weight">
                </div>
                <div class="mb-3 col-xs-4">
                    <label for="weighIn" class="form-label">Weigh In:</label>
                    <input  class="form-control" type="number" name="weighIn" placeholder="Weigh In">
                </div>
                
                <div class="mb-3 col-xs-4">
                    <label for="height" class="form-label">Height:</label>
                    <input  class="form-control" type="number" name="height" placeholder="Height">
                </div>
              
                <div class="mb-3 col-xs-4">
                     <label for="password" class="form-label">Password</label>
                     <input  class="form-control mb-3" type="password" name="password" placeholder="Password">
                 </div>
                <div class="mb-3 col-xs-4">
                        <label for="password-confirm">Confirm Password</label>
                        <input  class="form-control mb-3" type="password" name="confirmPassword" placeholder="Confirm Password">
                </div>

                <div class="d-grid">
                    <button class="btn btn-primary btn-lg" id="submitButton" type="submit">Submit</button>
                </div>
            </form>
        </div>
        <!-- Hero image -->
        <div class="container py-5 h-60">
            <img src="../images/hero2.jpg" alt="" class="img-fluid" style="border-radius: 1rem 0 0 1rem;">
        </div>
    </div>
    
</body>
